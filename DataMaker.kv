<CustomPopup1>:
    size_hint: .5, .2
    auto_dismiss: False
    title: "Caution !"
    Color:
        rgba: .5,.5,1,1
    BoxLayout:
        orientation: "vertical"
        height: 60
        Label:
            text: "Type Keyword To Search"

        Button:
            text: "Close"
            on_press: root.dismiss()
            size: 20,30


<CustomPopup2>:

    size_hint: .8, .6
    auto_dismiss: False
    title: "About Us"
    BoxLayout:

        orientation: "vertical"
        height: 60
        BoxLayout:

            Label:
                text: "Developer"
            Label:
                text: "Alhapony_Farag"
                pos: self.pos


        BoxLayout:

            Label:
                text: "www.TNL.com"


        BoxLayout:
            orientation: "vertical"

            Label:
                text: "Special thanks to Python team (www.Python.org)"
            Label:
                text: "and Kivy Developing Team (www.kivy.org) "

        Button:
            text: "Close"
            on_press: root.dismiss()
            size: 20,30

<CustomPopup3>:
    size_hint: .5, .4
    auto_dismiss: False
    title: "Caution !"
    BoxLayout:
        orientation: "vertical"
        height: 60
        Label:

            text: "If you want to see more by developer"
        Label:

            text: "Click More By Us"

        Button:
            text: "More By Us"
            on_press: root.open_developer_page()
            size: 20,30
        Button:
            text: "Close"
            on_press: root.dismiss()
            size: 20,30

