DM:

<DM>:

    orientation: "vertical"
    url_text_input: sentence
    mylabel: mylabel1
    search_list: search_list_view
    button: button1
    padding: 10
    spacing: 10



    BoxLayout:

        size_hint_y: None
        height: "40dp"
        canvas:
            Color:
                rgba: .4,.4,.7,1

            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Dataset Maker"
    BoxLayout:


        size_hint_y: None
        height: "40dp"
        canvas:
            Color:
                rgba: .5,.5,1,1

            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: "Latest Path"
            background_color: 0, 70, 189, 0.94
            color: 0,0,0,1



        Button:
            text: "More by Developer"
            on_press: root.open_popup3()
            background_color: 0, 70, 189, 0.94
            color: 0,0,0,1



        Button:
            text: "About Us"
            on_press: root.aboutus()
            background_color: 0, 70, 189, 0.94
            color: 0,0,0,1



    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: "120dp"


    BoxLayout:

        orientation: "horizontal"
        height: "60dp"
        Label:
            text: "tag"
            color: 0,0,0,1
            size_hint_x: .50
            size_hint_y: 1

        TextInput:
            id: tag
            size_hint_y: 1
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

    BoxLayout:
        orientation: "horizontal"
        height: "60dp"
        Label:
            text: "Sentence"
            color: 0,0,0,1
            size_hint_x: .50
            size_hint_y: 1

        TextInput:
            id: sentence
            size_hint_y: 1
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]



    BoxLayout:
        orientation: "horizontal"
        height: "60dp"
        Label:
            text: "Reply"
            color: 0,0,0,1
            size_hint_x: .50
            size_hint_y: 1


        TextInput:
            id: reply
            size_hint_y: 1
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]



    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "60dp"
        CheckBox:
            center: self.parent.center
            on_active: root.activate_checkbox
            color: 0,0,0,1
        Label:
            font_size: 20
            color: 0,0,0,1
            center_x: self.parent.width / 4
            top: self.parent.top - 50
            text: "Faster"



    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "60dp"

        Button:
            text: "Insert"
            background_color: 0, 70, 189, 0.94
            color: 0,0,0,1
            size_hint_x: 15
            on_press: root.Insert()


    ScrollView:
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: 300

            Label:
                id: mylabel1


                size_hint_y: None
                text_size: self.width, None
                height: self.texture_size[1]

            RecycleBoxLayout:
                id: search_list_view
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                multiselect: True
                touch_multiselect: True

            Button:
                size_hint_y: None
                size_hint_x: None
                id: button1
                text: 'open'
                height: 40
                on_press: root.open_file()


